	"item": [
		{
			"name": "create-a-new-request",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"pm.test(\"Status code name has Created\", function () {\r",
							"    pm.response.to.have.status(\"Created\");\r",
							"});\r",
							"\r",
							"pm.test(\"Response format should be application/json\", function () {\r",
							"    let responseFormat = pm.response.headers.get(\"Content-Type\");\r",
							"    pm.expect(responseFormat).to.include(\"application/json\");\r",
							"});\r",
							"\r",
							"pm.test(\"Response time is less than 5000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(5000);\r",
							"});\r",
							"\r",
							"pm.test(\"Validate short_description key value\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.result.short_description).to.eql(\"RESTAPISEP2025\");\r",
							"});\r",
							"\r",
							"pm.test(\"Validate description key value\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    let jsonpath= jsonData.result['description'];\r",
							"    pm.expect(jsonpath).to.eql(\"my first post method\");\r",
							"});\r",
							"\r",
							"pm.test(\"Validate the JSON response have sys_id property\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    var jsonpath = jsonData.result;\r",
							"    pm.expect(jsonpath).to.have.property('sys_id');\r",
							"    pm.collectionVariables.set(\"sysId\", jsonpath.sys_id);    \r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
