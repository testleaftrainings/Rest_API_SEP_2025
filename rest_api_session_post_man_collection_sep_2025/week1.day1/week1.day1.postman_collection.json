		{
			"name": "get_all_records_from_incident_api_json",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const jsonpath = pm.require('npm:jsonpath@1.1.1');\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Status code name has OK\", function () {\r",
							"    pm.response.to.have.status(\"OK\");\r",
							"});\r",
							"\r",
							"pm.test(\"Response time is less than 5000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(5000);\r",
							"});\r",
							"\r",
							"pm.test(\"Content-Type header is application/json\", function () {\r",
							"    pm.expect(pm.response.headers.get('Content-Type')).to.include(\"application/json\");\r",
							"});\r",
							"\r",
							"var jsonData = pm.response.json();\r",
							"var hardwareCategory = jsonpath.query(jsonData, '$.result[?(@.category == \"Hardware\" || @.category == \"hardware\")]');\r",
							"console.log(hardwareCategory.length);\r",
							"\r",
							"pm.test(\"Content-Type header is application/json\", function () {\r",
							"    pm.expect(10).to.eql(hardwareCategory.length);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {
							"npm:jsonpath@1.1.1": {
								"id": "npm:jsonpath@1.1.1"
							}
